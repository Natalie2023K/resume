{{!-- 
Це код container файлу для summary сторінки, 
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
--}}

<div>
   {{#with main}}
    <main>
        <section>
            <div>
                {{>title data="Work history" big=true}}
            </div>
            <div>
                <ul>
                {{#each works}}
                     <li>
                        <div>{{position}}</div>

                        <br>

                        <div>
                            {{duration.from}} - 
                            {{#if duration.to}} 
                            {{duration.to}} 
                            {{else}} 
                            (досі працюю)  
                            {{/if}}
                            </div>
                             
                        <br>
                         {{#if company.url}}
                        <div>{{>link text=company.name href=company.url blank=true noLine=true}}</a></div>
                        {{else}}
                         <b>{{company.name}}</b>
                        {{/if}}
                        <br>
                        <br>
                        <div><strong>Projects ({{projectAmound}})</strong></div>
                        <br>
                        <ul>
                            {{#each projects}}
                            <li>
                                
                                <div>{{>link text=name href=url blank=true noLine=true}}</a></div>
                                
                                <div>{{about}}</div>
                                
                                <br>
                                <em><strong>"Project stacks" ({{stackAmount}})</strong></em>
                                <br>
                                {{#each stacks}}
                                <div>{{name}}</div>
                                {{/each}}
                                <br>
                                <em><strong>"Project awards"({{awardAmount}})</strong></em>
                                {{#each awards}}
                                <div>{{name}}</div>
                                {{/each}}
                                
                            </li>
                            {{/each}}
                        </ul>
                     </li>
                     <br>
                {{/each}}
                </ul>
            </div>
        </section>
    </main>
{{/with}}
    </div>

