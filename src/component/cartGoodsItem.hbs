 <div class="card col-12 mb-5">
            <div class="row mb-2">
                <div class="col-2 mt-2">
                    <img src="{{image}}">
                </div>
            
            <div class="col-3">
               <p class="text-title">{{name}}</p>
               <p>{{description}}</p>
                </div>
                <div class="col-3">
                    {{#with price}}
                    <p class="text-title">{{title}} :</p>
                    <p>{{value}}</p>
                    {{/with}}
                   
                </div>
                 <div class="col-1">
                        {{amount}}
                        </div>
                        <div class="col-3">
                            {{#each buttons}}
                            {{#if isPrimary}}
                           <div class="m-3">
                             <button type="button" class="btn btn-primary">{{text}}</button>
                           </div>
                            {{/if}}
                            {{#if isDanger}}
                            <button type="button" class="btn btn-danger">{{text}}</button>
                            {{/if}}
                            {{/each}}
                        </div>
                </div>
        </div>