<div class="col-6 mb-3">
              <div class="card ">
                  <img src="{{img}}" alt="ups" class="card-img-top">
                <div class="card-body ">
                {{#if isHot}}
                  <button class="btn btn-warning rounded-pill text-uppercase">hot</button>
                {{/if}}
                {{#if isNew}}
                <button class="btn btn-primary rounded-pill text-uppercase ">hot</button>
                {{/if}}
                {{#if isFast}}
                <button class="btn btn-success text-uppercase m-2">швидка доставка</button>
                {{/if}}
                {{#if isFree}}
                <button class="btn btn-dark  text-uppercase m-2">безкоштовна доставка</button>
                {{/if}}
                <p class="text-title">{{name}}</p>
                {{#with review}}
                <p><b>{{text}} - </b>{{amount}}</p>
                {{/with}}
                <p><b>{{price}}</b></p>
                <p><h5>{{delivery}}</h5></p>
                {{#each buttons}}
                {{#if isPrimary}}
                <a href="{{link}}" class="btn btn-primary m-2">{{text}}</a>
                {{/if}}
                {{#if isSecondary}}
                <a href="{{link}}" class="btn btn-secondary m-2">{{text}}</a>
                {{/if}}
                {{/each}}
                {{#each characteristics}}
                <ul>
                    <li>{{title}}</li>
                    <li>{{value}}</li>
                </ul>
                {{/each}}
                </div>
              </div>
            </div>