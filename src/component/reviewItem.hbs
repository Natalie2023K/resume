 <div class="card mt-5 mb-5 pt-5">
                        <div class="card-body">
                            {{#with title}}
                            <p class="title">{{userName}}</p>
                            <p>{{caption}}</p>
                            <p>{{date}}</p>
                            {{/with}}
                            <hr>
                            {{#with reviewBody}}
                            {{#with seller}}
                            <p class="text-title">{{title}}</p>
                            <p>{{value}}</p>
                            {{/with}}
                            {{#with rating}}
                            <p><b>{{title}} : </b>{{value}}</p>
                            {{/with}}
                            {{#each text}}
                            <p><q>{{this}}</q></p>
                            {{/each}}
                            {{#with advantages}}
                            <p><b>{{title}} : </b>{{text}}</p>
                            {{/with}}
                            {{#with disadvantages}}
                            <p><b>{{title}} : </b>{{text}}</p>
                            {{/with}}
                            <div class="row">
                                {{#each images}}
                                <div class="col">
                                    <img src="{{this}}" alt="ups" class="card-img-down">
                                </div>
                                {{/each}}
                            </div>
                            
                                {{#each coments}}
                                <div class="card pt-2 mt-2">
                                <div class="card-body ">
                                    <p><b>{{userName}}</b></p>
                                    <p>{{date}}</p>
                                    <p>{{text}}</p>
                                </div>
                                </div>
                                {{/each}}
                            
                            {{/with}}
                            
                        </div>
                    </div>